---
import Convert from '../../components/ConvertPage.astro';

export const formatsSupported = [
	{ format: 'webp', mymetype: 'image/webp' },
	{ format: 'png', mymetype: 'image/png' },
	{ format: 'jpeg', mymetype: 'image/jpeg' },
];

export function getStaticPaths() {
	const staticPaths = formatsSupported.map(({ format, mymetype }) => ({
		params: { format, mymetype },
	}));
	return staticPaths;
}

const texts = {
	language: 'en',
	title: 'Image Converter to',
	subtitle1: 'Convert your images in format',
	subtitle2: ', etc. to webp and download your images. Free, fast and secure.',
	subtitle3: 'and download your images. Free, fast and secure.',
	convert: 'Or convert to:',
	uploadTitle: 'Upload files',
	uploadMessage: 'Click to upload or drag & drop',
	uploadedTitle: 'Images uploaded',
	uploadedButton: 'Download all',
	copyright: 'All rights reserved',
};

const { format, mymetype } = Astro.params;
---

<Convert format={format as string} mymetype={mymetype as string} texts={texts} />
