---
interface Props {
	id: string;
	size?: 'sm' | 'md' | 'lg';
	disabled: boolean;
}

const { size = 'md', id, disabled } = Astro.props;

const height = {
	sm: 'h-6',
	md: 'h-8',
	lg: 'h-10',
};
---

<button
	id={id}
	disabled={disabled}
	class={`neu-button px-8 px-4 disabled:bg-none bg-gradient-to-br from-action-dark to-action-light font-bold ${height[size]}`}
>
	<slot />
</button>

<style>
	@reference "../styles/global.css";
	.neu-button {
		display: flex;
		-webkit-box-pack: center;
		-ms-flex-pack: center;
		justify-content: center;
		cursor: pointer;
		-webkit-box-align: center;
		-ms-flex-align: center;
		align-items: center;
		border: solid #404c5d 1px;
		font-size: 16px;
		@apply text-action-text;
		-webkit-transition: 500ms;
		transition: 500ms;
		border-radius: 5px;
		-webkit-box-shadow:
			4px 4px 12px rgb(0, 0, 0, 0.4),
			-4px -4px 12px rgb(255, 255, 255, 0.2);
		box-shadow:
			4px 4px 12px rgb(0, 0, 0, 0.4),
			-4px -4px 12px rgb(255, 255, 255, 0.2);
	}

	.neu-button:not(:disabled):hover {
		-webkit-box-shadow:
			4px 4px 12px rgb(0, 0, 0, 0.5),
			-4px -4px 12px rgb(255, 255, 255, 0.4);
		box-shadow:
			4px 4px 12px rgb(0, 0, 0, 0.5),
			-4px -4px 12px rgb(255, 255, 255, 0.4);
		@apply text-action-text;
		-webkit-transition: 500ms;
		transition: 500ms;
	}

	.neu-button:disabled {
		box-shadow:
			inset 2px 2px 4px rgb(0, 0, 0, 0.2),
			inset -2px -2px 4px rgb(255, 255, 255, 0.2);
		@apply text-default;
		-webkit-transition: 100ms;
		transition: 100ms;
	}
</style>
