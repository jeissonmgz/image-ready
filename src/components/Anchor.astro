---
interface Props {
	lang: string;
	href: string;
	size?: 'sm' | 'md' | 'lg';
	target: '_blank' | '_parent' | '_self' | '_top';
}

const { href, target, size = 'md', lang } = Astro.props;

import { getRelativeLocaleUrl } from 'astro:i18n';

const height = {
	sm: 'h-6',
	md: 'h-8',
	lg: 'h-10',
};
---

<a
	class={`neu-button bg-action font-bold ${height[size]} disabled:bg-gray-400`}
	href={`${getRelativeLocaleUrl(lang, href)}`}
	target={target}
>
	<slot />
</a>

<style>
	@reference "../styles/global.css";
	.neu-button {
		@apply px-4 py-2;
		display: flex;
		-webkit-box-pack: center;
		-ms-flex-pack: center;
		justify-content: center;
		cursor: pointer;
		-webkit-box-align: center;
		-ms-flex-align: center;
		align-items: center;
		border: solid #404c5d 1px;
		font-size: 16px;
		@apply text-action-text;
		-webkit-transition: 500ms;
		transition: 500ms;
		border-radius: 5px;
		-webkit-box-shadow:
			4px 4px 16px rgb(0, 0, 0, 0.4),
			-4px -4px 16px rgb(255, 255, 255, 0.2);
		box-shadow:
			4px 4px 16px rgb(0, 0, 0, 0.4),
			-4px -4px 16px rgb(255, 255, 255, 0.2);
	}

	.neu-button:hover {
		@apply bg-action-dark;
		-webkit-box-shadow:
			2px 2px 14px rgb(0, 0, 0, 0.5),
			-2px -2px 14px rgb(255, 255, 255, 0.5);
		box-shadow:
			2px 2px 14px rgb(0, 0, 0, 0.5),
			-2px -2px 14px rgb(255, 255, 255, 0.5);
		@apply text-action-text;
		-webkit-transition: 500ms;
		transition: 500ms;
	}

	.neu-button:active {
		-webkit-box-shadow:
			4px 4px 16px rgb(0, 0, 0, 0.4),
			-4px -4px 16px rgb(255, 255, 255, 0.4);
		box-shadow:
			4px 4px 16px rgb(0, 0, 0, 0.4),
			-4px -4px 16px rgb(255, 255, 255, 0.4);
		@apply text-action-text;
		-webkit-transition: 100ms;
		transition: 100ms;
	}
</style>
